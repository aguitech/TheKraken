                    android:id="@+id/layoutDots"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dots_height"
                    android:layout_marginTop="-40dp"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>



